<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015c9d"
    tools:context=".MonitoringFragment"
    tools:ignore="ExtraText">

    <!-- TODO: Update blank fragment layout --><![CDATA[/>]]><!-- Даты периода -->

    <TextView
        android:id="@+id/monitoring_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Мониторинг"
        android:textAppearance="@style/TextStyle"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/monitoring_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monitoring_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="11 декабря - 17 декабря"
        android:textAppearance="@style/TextStyle"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/graff" />

    <LinearLayout
        android:id="@+id/result_previous_week"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="425dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/previous_week_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="18dp"
            android:text="Результат"
            android:textColor="#015c9d"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/previous_week_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:text="3,254 м³"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp" />
    </LinearLayout>
</FrameLayout>